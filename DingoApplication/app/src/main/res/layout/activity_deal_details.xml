<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    tools:context="com.dinggoapplication.Activities.DealDetailsActivity">

    <include layout="@layout/toolbar"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/dealImage"
            android:scaleType="centerCrop"
            android:gravity="bottom|center_horizontal"
            android:contentDescription="@string/dealImage" />
        <TextView
            android:id="@+id/companyName"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:gravity="bottom|center_horizontal"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/hello_world"
            android:background="@drawable/gradientbackground"
            android:layout_alignParentBottom="true"
            android:paddingBottom="40dp"
            android:layout_alignParentEnd="true" />
        <RatingBar
            android:id="@+id/merchantRating"
            android:gravity="bottom|center_horizontal"
            style="@style/RatingBar"
            android:isIndicator="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:rating="4"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/details"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discount"
            android:text="Discount"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_height="0dp"
            tools:ignore="Suspicious0dp"
            android:layout_weight="11"
            android:layout_width="fill_parent"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/dealDetail"
            android:text="@string/long_text"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_weight="23"
            tools:ignore="Suspicious0dp"
            android:gravity="center"/>

        <View style="@style/hDivider" />
        <View style="@style/hDivider" />
        <TableLayout
            android:layout_height="0dp"
            tools:ignore="Suspicious0dp"
            android:layout_weight="12"
            android:layout_width="fill_parent"
            android:stretchColumns="*"
            android:orientation="horizontal">
            <TableRow>
                <TextView
                    android:id="@+id/seats"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="8"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingTop="5dp"
                    android:layout_column="0"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                    <View style="@style/vDivider" />
                </LinearLayout>
                <TextView
                    android:id="@+id/timeleft"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="0h25m"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingTop="5dp"
                    android:layout_column="1"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                    <View style="@style/vDivider" />
                </LinearLayout>
                <TextView
                    android:id="@+id/redeemBy"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="2:00PM"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingTop="5dp"
                    android:layout_column="2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/seatsText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Seats Left"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="1dp"
                    android:layout_column="0"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                    <View style="@style/vDivider" />
                </LinearLayout>
                <TextView
                    android:id="@+id/timeleftText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="to claim"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="1dp"
                    android:layout_column="1"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                    <View style="@style/vDivider" />
                </LinearLayout>
                <TextView
                    android:id="@+id/redeemByText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="to redeem by"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="1dp"
                    android:layout_column="2"/>
            </TableRow>
            <View style="@style/hDivider"/>
        </TableLayout>
        <LinearLayout
            android:layout_height="0dp"
            tools:ignore="Suspicious0dp"
            android:layout_weight="12"
            android:layout_width="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dingFor"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ding For:"/>
            <com.dinggoapplication.CustomInterface.HorizontalNumberPicker
                android:id ="@+id/horizontal_number_picker"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width ="wrap_content"
                android:layout_height ="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dingItButton"
            android:background="@color/red"
            android:padding="15dp"
            android:orientation="horizontal">
            <TextView
                android:text="Ding This Deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
