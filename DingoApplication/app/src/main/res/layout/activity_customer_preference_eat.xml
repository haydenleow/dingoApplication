<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dinggoapplication.activities.CustomerPreferenceEat">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/eatLinearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/pBudget" />

        <com.dinggoapplication.custom_ui.RangeSeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eatRangeSeekBar"
            android:layout_marginBottom="20dp"/>
        <View style="@style/hDivider"/>
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/eatLinearlayout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/eatListView" />

</RelativeLayout>
